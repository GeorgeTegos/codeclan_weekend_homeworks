{% extends 'base.jinja' %}{% block content %}

<h2>Add New Book</h2>
<form action="/new_book" method="post">

    <label for="title">New Title</label>
    <input type="text" name="title" id="title">

    <label for="author">Author</label>
    <input type="text" name="author" id="author">

    <label for="book_genre">Book Genre</label>
    <input type="text" name="book_genre" id="book_genre">

   <label for="check_out">Is book available?</label>
    <input type="checkbox" name="check_out" id="check_out" value="off">


    <input type="submit" value="Submit">
    
</form>




{% endblock content %}

