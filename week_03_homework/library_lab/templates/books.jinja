{% extends 'base.jinja' %}
{% block content %}
    
    {% if book != List  %}
        <ul>
            <li>{{ book.title }}</li>
            <li>{{ book.author }}</li>
            <li>{{ book.book_genre }}</li>
        </ul>
    {% endif %}
    
    <ul> 
        {% for book in book_list  %}
            <li> {{ book.title }} by {{ book.author }} (Genre: {{ book.book_genre }} )
            <a href="/books/{{loop.index0}}">link</a></li>
            <a href="/books/{{loop.index0}}/delete">Delete</a>
        {% endfor %}
    </ul>

{% endblock content %}

